WzdTlBar.h

/////////////////////////////////////////////////////////////////////
// Modify Mainframe Class
/////////////////////////////////////////////////////////////////////

// 1) declare new toolbar class in Mainfrm.h
//  (change CToolBar to CWzdToolBar)
	CWzdToolBar    m_wndToolBar;


// 2) in Mainfrm.cpp's OnCreate(), change LoadToolBar() to LoadToolBarEx()
int CMainFrame::OnCreate(LPCREATESTRUCT lpCreateStruct)
{
	if (CMDIFrameWnd::OnCreate(lpCreateStruct) == -1)
		return -1;
	
	if (!m_wndToolBar.Create(this) ||
		!m_wndToolBar.LoadToolBarEx(IDR_MAINFRAME))
	{
		TRACE0("Failed to create toolbar\n");
		return -1;      // fail to create
	}

// 3) use Toolbar Editor to add a button where you want combobox to appear
//  and give it the id: IDC_WZD_COMBO


